<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/psregular"
            android:text="&lt; BACK"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <com.nith.appteam.nimbus2020.Utils.GradientTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/psb"
            android:text="e v e n t s"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/corner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/linear_layout_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/departmental_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/psitalic"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="Departmental"
                android:textAllCaps="true"
                android:textColor="@color/greyLight"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/institutional_tab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/psitalic"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:text="Institutional"
                android:textAllCaps="true"
                android:textColor="@color/greyLight"
                android:textSize="11sp" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/corner"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/events_fragment_holder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>

    </RelativeLayout>
</LinearLayout>
