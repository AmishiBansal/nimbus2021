<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"


    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".Activity.add_i_events">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/addImgI"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fui_ic_anonymous_white_24dp"
            android:backgroundTint="#000000"

            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/NameAddI"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addImgI"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:hint="Please enter name of event"
            android:inputType="text"
            android:padding="20sp" />

        <EditText
            android:id="@+id/infoAddI"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameAddI"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add info related to event"
            android:inputType="textMultiLine"
            android:padding="20dp" />

        <EditText
            android:id="@+id/venueAddI"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoAddI"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add venue of event"
            android:inputType="text"
            android:padding="20dp" />

        <TextView
            android:id="@+id/dateAddI"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venueAddI"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add date of event"
            android:inputType="datetime"
            android:padding="20dp" />

        <TextView
            android:id="@+id/timeAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateAddI"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add time of event"
            android:inputType="datetime"
            android:padding="20dp" />

        <EditText
            android:id="@+id/pdfAddI"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please info for abstract button "
            android:inputType="textMultiLine"
            android:padding="20dp" />

        <EditText
            android:id="@+id/addregUrlI"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pdfAddI"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add regUrl for the event"
            android:inputType="textWebEditText"
            android:padding="20dp" />

        <Button
            android:id="@+id/AddButtonI"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addregUrlI"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/buttob"
            android:backgroundTint="#0A0709"
            android:padding="20dp"
            android:text="ADD"
            android:textAllCaps="false"
            android:textColor="#FDFAFA"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>
</ScrollView>