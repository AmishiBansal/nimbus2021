<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4B80F0FF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".Activity.add_d_events">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/addImgD"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fui_ic_anonymous_white_24dp"
            android:backgroundTint="#000000"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/NameAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addImgD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:hint="Please enter name of events"
            android:inputType="textNoSuggestions"
            android:padding="20sp" />

        <EditText
            android:id="@+id/infoAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add info related to event"
            android:inputType="textMultiLine"
            android:padding="20dp" />

        <EditText
            android:id="@+id/venueAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add venue of event"
            android:inputType="textNoSuggestions"
            android:padding="20dp" />

        <TextView
            android:id="@+id/dateAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venueAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add date of event"
            android:inputType="datetime"
            android:padding="20dp" />

        <TextView
            android:id="@+id/timeAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add time of event"
            android:inputType="datetime"
            android:padding="20dp" />

        <EditText
            android:id="@+id/pdfAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="add information for abstract button"
            android:inputType="textMultiLine"
            android:padding="20dp" />

        <EditText
            android:id="@+id/addregUrlD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pdfAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add regUrl for the event"
            android:inputType="textWebEmailAddress"
            android:padding="20dp" />

        <Button
            android:id="@+id/AddButtonD"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addregUrlD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/buttob"
            android:backgroundTint="#0A0709"
            android:padding="20dp"
            android:text="ADD"
            android:textAllCaps="false"
            android:textColor="#FDFAFA"
            android:textSize="20sp"
            android:textStyle="bold|italic" />


    </RelativeLayout>
</ScrollView>