<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Add_Exhibition">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/addImgExh"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fui_ic_anonymous_white_24dp"
            android:backgroundTint="#000000"
            android:paddingTop="10dp" />


        <EditText
            android:id="@+id/NameAddExh"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addImgExh"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:hint="Please enter name of Exhibition"
            android:inputType="text"
            android:padding="20sp" />

        <EditText
            android:id="@+id/infoAddExh"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/NameAddExh"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add info related to Exhibition"
            android:inputType="textMultiLine"
            android:padding="20dp" />

        <EditText
            android:id="@+id/venueAddExh"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infoAddExh"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add venue of exhibition"
            android:inputType="text"
            android:padding="20dp" />

        <TextView
            android:id="@+id/dateAddExh"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venueAddExh"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add date of exhibition"
            android:inputType="datetime"
            android:padding="20dp" />

        <TextView
            android:id="@+id/timeAddD"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateAddExh"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add time of exhibition"
            android:inputType="datetime"
            android:padding="20dp" />

        <EditText
            android:id="@+id/addregUrlExh"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeAddD"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:hint="Please add regUrl for the exhibition"
            android:inputType="textWebEditText"
            android:padding="20dp" />

        <Button
            android:id="@+id/AddButtonExh"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addregUrlExh"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/buttob"
            android:backgroundTint="#0A0709"
            android:padding="20dp"
            android:text="ADD"
            android:textAllCaps="false"
            android:textColor="#FDFAFA"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>
</ScrollView>
